{
  "name": "nuimarkets/laravel-shared-utils",
  "description": "Common Laravel Classes",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Nui Markets",
      "email": "developers@nuimarkets.com"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.2",
    "bramus/monolog-colored-line-formatter": "~3.0.0",
    "monolog/monolog": "^2.0",
    "laravel/framework": "^9.0|^10.0",
    "sentry/sentry-laravel": "^4.11"
  },
  "suggest": {
    "php-amqplib/php-amqplib": "Required for RabbitMQ health checks (~3.5.0)"
  },
  "scripts": {
    "format": "php-cs-fixer fix",
    "lint": "php-cs-fixer fix --dry-run --diff"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "orchestra/testbench": "^7.50",
    "friendsofphp/php-cs-fixer": "^3.66.1"
  },
  "autoload": {
    "psr-4": {
      "Nuimarkets\\LaravelSharedUtils\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nuimarkets\\LaravelSharedUtils\\Tests\\": "tests/"
    }
  }
}
